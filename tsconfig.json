{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es5",
      "lib": [ "es2015", "dom" ],
      "strict": true,
      "outDir": "dist",
      "jsx": "preserve",
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "sourceMap": true,
      "declaration": true
  },
  "exclude": [
    "tests/**"
  ]
}