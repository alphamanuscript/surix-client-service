{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es5",
      "lib": [ "es2015", "dom" ],
      "outDir": "build/lib",
      "strict": true,
      "jsx": "preserve",
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "sourceMap": true,
      "declaration": true
  }
}